[Unit]
Description=gunicorn daemon
Requires=gunicorn.socket
After=network.target

[Service]
User=ubuntu
Group=ubuntu
WorkingDirectory=/home/ubuntu/webworkspace
ExecStart=/home/ubuntu/miniconda3/envs/dj_web/bin/gunicorn \
   --access-logfile - \
   --workers 3 \
   --bind unix:/run/gunicorn.sock \
   djangoproject.wsgi:application

[Install]
WantedBy=multi-user.target